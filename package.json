{
  "name": "react-typescript-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.0.1",
    "@storybook/addon-knobs": "^3.0.1",
    "@storybook/addon-links": "^3.0.0",
    "@storybook/addon-storyshots": "^3.0.0",
    "@storybook/react": "^3.0.0",
    "@types/classnames": "^2.2.0",
    "@types/jest": "^19.2.4",
    "@types/node": "^7.0.27",
    "@types/react": "^15.0.26",
    "@types/react-dom": "^15.5.0",
    "@types/webpack-env": "^1.13.0",
    "@zinserjan/react-scripts-ts": "2.2.5",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.0",
    "prettier": "^1.4.2",
    "react-test-renderer": "^15.5.4"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "format": "prettier --trailing-comma es5 --print-width 120 --write 'src/**/*.{js,jsx,ts,tsx}'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --trailing-comma es5 --print-width 120 --write",
      "git add"
    ]
  }
}
